#This is a template used by the installNagiosCore.yml playbook

define host{
name linux-box ; Name of this template
use generic-host ; Inherit default values
check_period 24x7
check_interval 5
retry_interval 1
max_check_attempts 10
check_command check-host-alive
notification_period 24x7
notification_interval 30
notification_options d,r
contact_groups admins
register 0 ; DONT REGISTER THIS - ITS A TEMPLATE
}


define host{
use linux-box ; Inherit default values from a template
host_name {{ groups.mailServers | map(ansible_hostname) }} ; The name we're giving to this server
alias {{ groups.mailServers | map(ansible_hostname) }} ; A longer name for the server
address {{ groups.mailServers | map(ansible_default_ipv4.address) }} ; IP address of Remote Linux host
}
